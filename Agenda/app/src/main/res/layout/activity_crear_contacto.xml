<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".CrearContactoActivity">

    <TextView
        android:id="@+id/tvDatosContacto"
        android:text="@string/datosContacto"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvNombre"
        android:layout_marginTop="10dp"
        android:text="@string/nombre"
        app:layout_constraintTop_toBottomOf="@id/tvDatosContacto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etNombre"
        app:layout_constraintTop_toBottomOf="@id/tvDatosContacto"
        app:layout_constraintLeft_toRightOf="@+id/tvNombre"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvTelefono"
        android:text="@string/telefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/etNombre"/>

    <EditText
        android:id="@+id/etTelefono"
        android:inputType="phone"
        app:layout_constraintTop_toBottomOf="@+id/etNombre"
        app:layout_constraintLeft_toRightOf="@+id/tvTelefono"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvIcono"
        android:layout_marginTop="40dp"
        android:text="@string/icono"
        app:layout_constraintTop_toBottomOf="@+id/tvTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/ibIcono"
        android:onClick="onClickCategoria"
        app:layout_constraintTop_toBottomOf="@+id/etTelefono"
        app:layout_constraintLeft_toRightOf="@+id/tvIcono"
        android:background="@drawable/cat_amigos"
        android:tag="0"
        android:layout_marginLeft="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/btAceptar"
        android:onClick="onClickAceptar"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/ibIcono"
        android:text="@string/aceptar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>
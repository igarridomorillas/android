<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_alignParentTop="true"
        android:layout_above="@+id/btReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/llBotones"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/btReset"
        android:onClick="onClickReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reset"
        android:layout_above="@+id/btBorrarTodos"/>
    <Button
        android:id="@+id/btBorrarTodos"
        android:onClick="onClickBorrarTodos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/borrarTodos"
        android:layout_above="@+id/btAnadir"/>
    <Button
        android:id="@+id/btAnadir"
        android:onClick="onClickAnadir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/anadir"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>